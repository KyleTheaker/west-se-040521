<h1>New mission assignments</h1>
<% if @mission.errors.any? %>
        <% @mission.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <% end %>
    <% end %>
<%= form_for @mission do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :scientist %>
    <%= f.collection_select :scientist_id, Scientist.all, :id, :name %>
    <%= f.label :planet %>
    <%= f.collection_select :planet_id, Planet.all, :id, :name %>
    <%= f.submit %>
<% end %>