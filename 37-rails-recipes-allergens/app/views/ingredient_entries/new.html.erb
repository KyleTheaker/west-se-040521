<h1>Add an ingredient</h1>

<%= form_for @ingredient_entry do |f| %>   
    <% if @ingredient_entry.errors.any? %>
        <ul>
            <% @ingredient_entry.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
    <%= f.label :recipe %>
    <%= f.collection_select :recipe_id, Recipe.all, :id, :name %>
    <%= f.label :ingredient %>
    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
    <%= f.submit %>
<% end %>